{
  "manifest_version": 3,
  "name": "Advanced To-Do List",
  "version": "1.0",
  "description": "A simple yet advanced to-do list Chrome extension.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon_1.png",
      "48": "icon_2.png",
      "128": "icon_3.png"
    }
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon_1.png",
    "48": "icon_2.png",
    "128": "icon_3.png"
  }
}
